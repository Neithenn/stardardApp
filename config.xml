<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cursando.android" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cursando</name>
    <description>
        Cursando Aplicacion
    </description>
    <author email="ezequiel.r26@gmail.com" href="">
        Cursando App Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-buildinfo" spec="~1.1.0" />
    <plugin name="cordova-universal-links-plugin" spec="~1.2.1" />
    <plugin name="cordova-plugin-browsertab" spec="~0.2.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.7.1" />
    <universal-links>
        <host name="" scheme="https" />
        <host name="standardapp-37abf.firebaseapp.com" scheme="https">
            <path url="/__/auth/callback" />
        </host>
    </universal-links>
    <preference name="AndroidLaunchMode" value="singleTask" />
    <plugin name="cordova-plugin-facebook4" spec="~1.9.1">
        <variable name="APP_ID" value="332723973797774" />
        <variable name="APP_NAME" value="Cursando" />
    </plugin>
    <plugin name="cordova-plugin-device" spec="~1.1.6" />
    <plugin name="cordova-plugin-fcm" spec="~2.1.2" />
    <plugin name="cordova-plugin-camera" spec="~2.4.1" />
    <plugin name="com.mercadopago.cordova.sdk" spec="~1.1.18" />
    <engine name="browser" spec="~4.1.0" />
    <engine name="android" spec="~6.1.2" />
</widget>
